<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/grdnt"
    tools:context=".ui.CCI.CCIFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/logo1"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:gravity="center"
            android:visibility="visible"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/textView"
                android:layout_width="416dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Policy Details"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="500sp"
            android:layout_height="1dp"
            android:background="@color/black"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/myListView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"/>

        <ListView
            android:id="@+id/myListView"
            android:layout_width="match_parent"
            android:layout_height="10sp"
            android:cacheColorHint="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/bg_top_header"
            app:layout_constraintStart_toStartOf="@+id/bg_top_header"
            app:layout_constraintTop_toBottomOf="@+id/logo1"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="350sp"
            android:layout_height="660sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myListView"
            app:srcCompat="@drawable/gold" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
